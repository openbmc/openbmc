+            return -ENOMEM;
+        }
+        if ((be->dh[0] = dmabuf_realloc(dbsc, be->dh[0], newsize)) == NULL) {
+            request_log("%s: Realloc %d failed\n", __func__, newsize);
+            return -ENOMEM;
+        }
+    }
+    return 0;
+}
