+int DIMMSensor::get_sensor_val(double *val)
+{
+    if (interface == "i3c")
+    {
+        if (sensorType == "temperature")
+            return get_temp_i3c(val);
+        if (sensorType == "voltage")
+            return get_volt_i3c(val);
+    }
+    if (interface == "sbrmi")
+    {
+        if (sensorType == "temperature")
+            return get_temp_sbrmi(val);
+        if (sensorType == "power")
+            return get_power_sbrmi(val);
+    }
+    return -1;
+}
