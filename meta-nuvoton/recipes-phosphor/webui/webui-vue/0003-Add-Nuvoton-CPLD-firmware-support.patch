       return state.bmcFirmware.find(
         (firmware) => firmware.id !== state.bmcActiveFirmwareId
@@ -43,6 +45,7 @@ const FirmwareStore = {
     setBmcFirmware: (state, firmware) => (state.bmcFirmware = firmware),
