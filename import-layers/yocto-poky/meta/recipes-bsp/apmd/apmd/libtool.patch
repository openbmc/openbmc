@@ -58,9 +57,8 @@
 #CFLAGS=-O3 -m486 -fomit-frame-pointer
 #LDFLAGS=-s
 
-LIBTOOL=libtool --quiet
-LT_COMPILE = $(LIBTOOL) --mode=compile $(CC)
-LT_LINK = $(LIBTOOL) --mode=link $(CC)
