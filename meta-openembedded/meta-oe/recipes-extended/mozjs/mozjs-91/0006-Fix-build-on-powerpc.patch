@@ -232,7 +232,7 @@ class DebugFrame {
 #if defined(JS_CODEGEN_MIPS32) || defined(JS_CODEGEN_ARM) || \
     (defined(JS_CODEGEN_NONE) && \
      (defined(__riscv) && __riscv_xlen == 32) || defined(__mips__)) || \
