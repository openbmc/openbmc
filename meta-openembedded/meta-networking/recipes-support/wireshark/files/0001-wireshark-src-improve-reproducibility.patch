+++ b/tools/ncp2222.py
@@ -5858,7 +5858,7 @@ def produce_code():
 
     print("/*")
     print(" * Do not modify this file. Changes will be overwritten.")
-    print(" * Generated automatically from %s" % (sys.argv[0]))
+    print(" * Generated automatically from %s" % (os.path.basename(sys.argv[0])))
     print(" */\n")
 
