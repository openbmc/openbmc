===================================================================
--- qemu-8.0.0.orig/scripts/tracetool/backend/syslog.py
+++ qemu-8.0.0/scripts/tracetool/backend/syslog.py
@@ -12,6 +12,8 @@ __maintainer__ = "Stefan Hajnoczi"
 __email__      = "stefanha@redhat.com"
 
 
