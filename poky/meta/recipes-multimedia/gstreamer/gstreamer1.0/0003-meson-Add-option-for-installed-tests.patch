+                             '--test-execdir=@0@'.format(installed_tests_execdir),
+                             '--testname=@0@'.format(installed_test_shscript),
+                             '--output=@0@'.format(join_paths('@OUTDIR@', installed_test_desc)),
+                           ],
+                           install: true,
+                           install_dir: installed_tests_datadir)
+    endif
