 if (eval "$ac_cpp conftest.$ac_ext") 2>&5 |
-  $EGREP "yes" >/dev/null 2>&1; then :
+  $EGREP "use_ppc_elfv2_abi" >/dev/null 2>&1; then :
   libc_cv_ppc64_elfv2_abi=yes
 else
