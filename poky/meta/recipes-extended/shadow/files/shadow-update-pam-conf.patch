 etc/pam.d/useradd   | 2 +-
 etc/pam.d/userdel   | 2 +-
 etc/pam.d/usermod   | 2 +-
 9 files changed, 9 insertions(+), 9 deletions(-)

diff --git a/etc/pam.d/chage b/etc/pam.d/chage
index 8f49f5c..b1f365d 100644
--- a/etc/pam.d/chage
+++ b/etc/pam.d/chage
@@ -1,4 +1,4 @@
 #%PAM-1.0
 auth		sufficient	pam_rootok.so
