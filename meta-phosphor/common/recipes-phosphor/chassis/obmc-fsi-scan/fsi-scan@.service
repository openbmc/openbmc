[Unit]
Description=Scan FSI devices
After=op-wait-power-on@%i.service
Before=obmc-power-start@%i.target
Before=obmc-power-on@%i.target
Conflicts=obmc-power-chassis-off@%i.target

[Service]
ExecStart=/bin/echo 1 > /sys/bus/platform/devices/fsi-master/scan
Type=oneshot
RemainAfterExit=yes

[Install]
RequiredBy=obmc-power-chassis-on@%i.target
